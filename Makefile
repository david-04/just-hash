include .launchpad/Makefile.header # see .launchpad/Makefile.documentation

#-----------------------------------------------------------------------------------------------------------------------
# Default target
#-----------------------------------------------------------------------------------------------------------------------

autorun : $(LP_PREREQUISITE_BUNDLE);

#-----------------------------------------------------------------------------------------------------------------------
# Help
#-----------------------------------------------------------------------------------------------------------------------

$(call lp.help.add-target, release, ............ assemble docs/index.html)

#-----------------------------------------------------------------------------------------------------------------------
# Bundle
#-----------------------------------------------------------------------------------------------------------------------

$(call lp.bundle.add, src/just-hash.tsx, dist/just-hash.js, sourcemap)

#-----------------------------------------------------------------------------------------------------------------------
# Clean
#-----------------------------------------------------------------------------------------------------------------------

$(call lp.clean.tsc-output)
$(call lp.clean.bundles)
# $(call lp.clean.npm-packages)
# $(call lp.clean.files, list files here...)

release : docs/index.html;

docs/index.html : $(foreach extension, css html js , dist/just-hash.$(extension)) bin/bundle-html.sh
	bin/bundle-html.sh


#-----------------------------------------------------------------------------------------------------------------------
include .launchpad/Makefile.footer
